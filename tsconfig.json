{
	"compilerOptions": {
		"target": "ESNext",
		"module": "commonjs",
		"lib": [
			"esnext"
		],
		"sourceMap": false,
		"moduleResolution": "Node",
		"strictNullChecks": true,
		"removeComments": true,
		"declaration": true,
		"emitDeclarationOnly": true,
		"outDir": "./built/lib/",
		"declarationDir": "./built/t/",
		"declarationMap": true,
		"preserveWatchOutput": true,
		"alwaysStrict": true,
		"diagnostics": true,
		"strict": true,
		"noImplicitAny": true,
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"noImplicitThis": true,
		"listFiles": true,
		"pretty": false,
		"noEmitOnError": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": false,
		"rootDir": "./",
		"experimentalDecorators": true,
		"resolveJsonModule": true,
	},
	"exclude": [
		"node_modules",
		"built"
	],
	"include": [
		"src/**/*",
		"rollup.config.js",
		"commitlint.config.cjs",
		"jest.config.js",
		"test/*.spec.ts"
	]
}
